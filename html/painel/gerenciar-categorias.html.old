<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gerenciar Categorias - BoraRangar</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-slate-100 min-h-screen">
    <div id="app-content"> <header class="bg-white shadow-md">
            <div class="max-w-5xl mx-auto p-4 flex justify-between items-center">
                <h1 class="text-2xl font-bold text-slate-800">Gerenciar Categorias do Cardápio</h1>
                <a href="dashboard.html" class="bg-slate-200 text-slate-800 font-bold py-2 px-4 rounded-lg">Voltar ao Painel</a>
            </div>
        </header>

        <main class="max-w-5xl mx-auto p-4 md:p-8">
            <section class="bg-white p-6 rounded-lg shadow-md mb-8">
                <h2 class="text-xl font-bold text-slate-700 mb-4">Adicionar Nova Categoria</h2>
                <form id="add-category-form" class="flex gap-4">
                    <input type="text" name="nome" placeholder="Nome da Categoria (ex: Pizzas)" required class="flex-grow p-2 border rounded">
                    <button type="submit" class="bg-green-600 text-white font-bold py-2 px-6 rounded">Adicionar</button>
                </form>
                <p id="form-message" class="text-sm h-5 mt-4"></p>
            </section>

            <section class="bg-white shadow-md rounded-lg">
                <h2 class="text-xl font-bold text-slate-700 p-4 border-b">Categorias Cadastradas</h2>
                <div id="category-list" class="divide-y">
                    <p id="loading-categories" class="p-4 text-slate-500">Carregando...</p>
                </div>
            </section>
        </main>
    </div>
    <script>
    document.addEventListener('DOMContentLoaded', () => {
        const categoryList = document.getElementById('category-list');
        const loadingCategories = document.getElementById('loading-categories');
        const addCategoryForm = document.getElementById('add-category-form');
        const formMessage = document.getElementById('form-message');

        // Não tinha lógica de login JS, OK

        // Funções fetchCategories, renderCategories (sem alterações)
        async function fetchCategories() {
            try {
                // Removido o redirecionamento daqui, pois a checagem inicial já faz isso
                const response = await fetch('/categorias_api.php'); 
                const categories = await response.json();
                renderCategories(categories);
            } catch (error) { loadingCategories.textContent = 'Erro ao carregar categorias.'; }
        }
        function renderCategories(categories) { /* ... */ }

        // Listeners addCategoryForm, categoryList (sem alterações)
        addCategoryForm.addEventListener('submit', async (e) => { /* ... */ });
        categoryList.addEventListener('click', async (e) => { /* ... */ });
        
        // Verificação de sessão - AJUSTADO
        fetch('/pedidos_api.php?status=ativos&limit=1') // Faz um "ping" na API protegida
            .then(res => { 
                if (res.ok) { 
                    fetchCategories(); // Chama a função para carregar os dados se estiver logado
                } else { 
                    // Se não estiver logado (403 ou outro erro), redireciona para o login
                    window.location.href = '/painel/index.html'; 
                } 
            })
            .catch(err => { 
                // Erro de rede ou outro erro grave
                console.error("Erro na verificação inicial:", err);
                window.location.href = '/painel/index.html'; 
            });
    });
    </script>
</body>
</html>
